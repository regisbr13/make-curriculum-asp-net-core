@model MakeCurriculum.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}


<div class="row">
    <div class="col-md-4">
        <h2 class="text-info">Login de usuário:</h2>
        <hr />
        <form asp-action="Login">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="col-md-3 col-sm-3 col-xs-3" style="padding-left:0">
                <input type="submit" class="btn btn-primary" value="Entrar" />
            </div>
        </form>
        <div class="col-md-9 col-sm-9 col-xs-9" style="padding-left:0">
            <form asp-action="Login">
                <input asp-for="Email" type="hidden" value="visitante@visitante.com" class="form-control" />
                <input asp-for="Password" type="hidden" value="12345" class="form-control" />
                <button type="submit" class="btn btn-link">Entrar como visitante</button>
                <a asp-action="Register" class="btn btn-link">Registrar</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}