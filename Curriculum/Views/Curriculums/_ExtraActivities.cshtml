@model ICollection<MakeCurriculum.Models.ExtraActivity>

    <ul>
        @foreach (var item in Model)
        {
        <div class="row">
            <li class="h4 list-group">
                <div class="col-md-10 col-sm-8 col-xs-6">
                    <strong>@item.CourseName</strong>
                    <p>@item.Info</p>
                </div>
                <div class="col-md-2 col-sm-4 col-xs-6">
                    <a class="editExtra" data-id="@item.Id"><i class="glyphicon glyphicon-edit btn btn-warning btn-sm"></i></a>
                    <a class="deleteExtra" data-id="@item.Id"><i class="glyphicon glyphicon-trash btn btn-danger btn-sm"></i></a>
                </div>
            </li>
        </div>
            <hr />
        }
    </ul>