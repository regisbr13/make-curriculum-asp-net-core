@model MakeCurriculum.Models.ViewModels.FormViewModel

<h4 class="text-info text-center">Novo Idioma</h4>
<div class="col-md-6 col-md-offset-3">
    <form asp-action="Create" asp-controller="Languages" method="post">
        <div class="form-group">
            <label asp-for="Language.Name" class="control-label"></label>
            <input asp-for="Language.Name" class="form-control"/>
            <span asp-validation-for="Language.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Language.Level" class="control-label"></label>
            <select asp-for="Language.Level" class="form-control">
                <option>Básico</option>
                <option>Intermediário</option>
                <option>Avançado</option>
                <option>Fluente</option>
            </select>
            <span asp-validation-for="Language.Level" class="text-danger"></span>
        </div>
        <div class="form-group text-right">
            <input asp-for="Language.CurriculumId" value="@Model.Curriculum.Id" type="hidden" />
            <button type="submit" class="btn btn-success btn-sm"><i class="glyphicon glyphicon-ok"></i> Salvar</button>
        </div>
    </form>
</div>