@model MakeCurriculum.Models.PersonalData

@{
    Layout = null;
}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title text-center">Excluir Dados Pessoais</h4>
        </div>
        <form asp-action="Delete">
            <div class="modal-body">
                <p>Confirmar a exclusão dos dados?</p>
                <strong class="h4">@Model.Name</strong>
                <p>@Model.Nationality, @Model.CivilStatus, @Model.Age anos</p>
                <p>@Model.Phone - @Model.Email - @Model.Site</p>
                <p>@Model.Site</p>
                <div class="form-horizontal">
                    <input type="hidden" asp-for="Id" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i></button>
                <button type="submit" class="btn btn-success btn-sm"><i class="glyphicon glyphicon-ok"></i></button>
            </div>
        </form>
    </div>
</div>
